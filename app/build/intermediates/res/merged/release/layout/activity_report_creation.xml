<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilizedconstruction.ReportCreationActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="128dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/DisplayedUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription=""
                android:src="@mipmap/user"
                android:visibility="visible"
                app:srcCompat="@mipmap/user" />

            <Button
                android:id="@+id/CreateNewReportButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/DisplayedUserImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Create A New Report" />

            <Button
                android:id="@+id/CreatedReportButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/DraftedReportButton"
                android:layout_centerHorizontal="true"
                android:text="Created Reports" />

            <Button
                android:id="@+id/DraftedReportButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/CreateNewReportButton"
                android:layout_centerHorizontal="true"
                android:text="Drafted Reports" />

            <Button
                android:id="@+id/SignOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/CreatedReportButton"
                android:layout_centerHorizontal="true"
                android:text="Sign Out" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilizedconstruction.SetRoadHazardActivity">

    <Button
        android:id="@+id/potholesButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="Potholes"
        app:layout_constraintEnd_toStartOf="@+id/speedBumpsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/speedBumpsButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="32dp"
        android:text="Speed Bumps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/drainageButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Drainage"
        app:layout_constraintEnd_toStartOf="@+id/roadDebrisButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potholesButton" />

    <Button
        android:id="@+id/roadDebrisButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="8dp"
        android:text="Road Debris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedBumpsButton" />

    <Button
        android:id="@+id/inclementWeatherButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Inclement Weather"
        app:layout_constraintEnd_toStartOf="@+id/accidentsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drainageButton" />

    <Button
        android:id="@+id/accidentsButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="8dp"
        android:text="Accidents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roadDebrisButton" />

    <Button
        android:id="@+id/streetSignsButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Street Signs"
        app:layout_constraintEnd_toStartOf="@+id/otherHazardButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inclementWeatherButton" />

    <Button
        android:id="@+id/otherHazardButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="8dp"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accidentsButton" />

    <Button
        android:id="@+id/submitHazardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherHazardButton"
        app:layout_constraintVertical_bias="0.456" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Road Hazard"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />
</android.support.constraint.ConstraintLayout>

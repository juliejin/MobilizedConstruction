<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilizedconstruction.RoadFeaturesActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:text="Severity"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/severity1Button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:elevation="0dp"
            android:text="1"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/severity2Button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@+id/severity1Button"
            app:layout_constraintRight_toLeftOf="@+id/severity3Button"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        <Button
            android:id="@+id/severity3Button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:text="3"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:ignore="RtlHardcoded" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:text="Direction"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/leftDirectionButton"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:text="Left"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/rightDirectionButton"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:text="Right"
            app:layout_constraintLeft_toRightOf="@+id/leftDirectionButton"
            app:layout_constraintRight_toLeftOf="@+id/bothDirectionButton"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

        <Button
            android:id="@+id/bothDirectionButton"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/round_button_folder"
            android:text="Both"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            tools:ignore="RtlHardcoded" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:text="Next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:ignore="RtlHardcoded" />

</android.support.constraint.ConstraintLayout>
